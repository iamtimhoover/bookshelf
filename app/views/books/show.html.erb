<h1>Show Book</h1>

<p>
	<%= "#{@error_message}" %>

<p>

<p>
	<h2>Created by <%= @book.user_email %></h2>
</p>

<p>
	Title: <%= @book.title %>
</p>

<p>
	Description: <%= @book.description %>
</p>

<p>
	Author: <%= @book.author %>
</p>

<p>
	The movie was made in: <%= @book.year %>
</p>

<p>
	Rating: <%= @book.rating %>
</p>

<p>
	<%= link_to 'Delete', book_path, method: :delete , confirm: "Are you really sure you want to delete this?" %>
</p>

<p>
	<% if user_signed_in? && @edit_allowed %>
		<%= link_to "Edit", edit_book_path(@book) %>
	<% end %>
</p>

<p>
<%= link_to "View all books", books_path %>
</p>

